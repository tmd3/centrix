<h1>Listing cases</h1>

<table border="1">
    <tr>
        <th>Claim nr</th>
        <th>Rep</th>
        <th>Insuree</th>
        <th>Product</th>
        <th>Status</th>
        <th>Engineer</th>
        <th></th>
        <th></th>
        <th></th>
    </tr>

    <% @cases.each do |case| %>
        <tr>
            <td><%= case.claim_nr %></td>
            <td><%= case.rep %></td>
            <td><%= case.insuree %></td>
            <td><%= case.product %></td>
            <td><%= case.status %></td>
            <td><%= case.engineer %></td>
            <td><%= link_to 'Show', case %></td>
            <td><%= link_to 'Edit', edit_case_path(case) %></td>
            <td><%= link_to 'Destroy', case, :confirm => 'Are you sure?', :method => :delete %></td>
        </tr>
    <% end %>
</table>

<br />

