<%= render 'navigation_bar_for_manufacturer_index.html.erb' %>

<h1>Listing manufacturers</h1>

<table border="1">
  <tr>
    <th>Name</th>
    <th>Brands</th>
    <th>Parent co</th>
    <th>Address 1</th>
    <th>Address 2</th>
    <th>Phone no</th>
    <th>Fax no</th>
    <th>Website</th>
    <th>Documents and manuals</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @manufacturers.each do |manufacturer| %>
  <tr>
    <td><%= manufacturer.name %></td>
    <td><%= manufacturer.brands %></td>
    <td><%= manufacturer.parent_co %></td>
    <td><%= manufacturer.address_1 %></td>
    <td><%= manufacturer.address_2 %></td>
    <td><%= manufacturer.phone_no %></td>
    <td><%= manufacturer.fax_no %></td>
    <td><%= manufacturer.website %></td>
    <td><%= manufacturer.documents_and_manuals %></td>
    <td><%= link_to 'Show', manufacturer %></td>
    <td><%= link_to 'Edit', edit_manufacturer_path(manufacturer) %></td>
    <td><%= link_to 'Destroy', manufacturer, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Manufacturer', new_manufacturer_path %>
